@import '../../style/icon-font.wxss';
.enter{width: 750rpx;background-color: #fff;padding: 25rpx;box-sizing: border-box;
display: flex;justify-content: flex-start;align-items: center;}
.enter .title{width:160rpx;height:60rpx;text-align: center;background-color: #ec6b66;
color: #fff;font-size: 26rpx;line-height: 60rpx;border-radius: 10rpx;margin-right:10rpx;}
.enter swiper-item{display: flex;justify-content: flex-start;align-items: center;font-size: 24rpx;color: #666;}
.enter text{font-size: 24rpx;}
.enter .cun{display: block;border:10rpx solid #000;background-color: #000;margin-right:10rpx;border-radius: 50%;}
.enter .name{color: #ec404c;}
.box-1 {
  background-color: #fff;display: flex;justify-content: flex-start;
  padding: 30rpx 30rpx 17rpx 30rpx;box-sizing: border-box;
}
.box-1 input {
  width: 525rpx;height: 75rpx;border: 5rpx solid #eb574f;text-align: left;padding: 0 20rpx;
  background-color: #fff;
  font-size: 26rpx;
  box-sizing: border-box;border-top-left-radius: 75rpx;border-bottom-left-radius: 75rpx;
}
.box-1 .search_btn{height: 75rpx;width:160rpx;color: #fff;background-color: #ec404c;
  line-height: 75rpx;border-top-right-radius: 75rpx;border-bottom-right-radius: 75rpx;
text-align: center;font-size: 28rpx;}
.box-1 .box-right .iconfont {
  padding: 0 5rpx 0 0;
  color: #808080;
}
.box-5 {
  height: 80rpx;
  background-color: #fff;
  font-size: 24rpx;
  padding: 0 20rpx;
  margin: 10rpx 0;
}

.box-5 .iconfont {
  padding-right: 10rpx;
  color: #f64349;
}
.category_item{
  width: 20%;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 40rpx;
  padding: 20rpx;
}

.category_item image{
  width: 80rpx;
  height: 80rpx;
}
.tab__item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-size: 24rpx;
  height: 80rpx;
  padding: 10px;
  box-sizing: border-box;
}

.stickyBar {
  position: sticky;
  top: 0;
  z-index: 100;
}

.vendor_hot {
  padding: 20rpx;
  margin-bottom: 10rpx;
  background: #fff;
}

.vendor_hot image {
  width: 140rpx;
  height: 140rpx;
}

.vendor_hot .vendor_name{
  font-size: 30rpx;
}
.vendor_hot .vendor_address{
  font-size: 24rpx;
  color: #888;
}
.vendor_hot .icon-location{
  color: red;
}
.vendor_hot .icon-phone{
  font-size: 60rpx;
  color: #ec404c;
}
.vendor_hot .vendor_top_info{
  flex: 1;
  padding-left: 20rpx;
}
.vendor_hot .vendor_top_info .icondianhua{font-size: 55rpx;color: #a52e1a;}
.vendor_name label {
  display: inline-block;
  font-size: 24rpx;
  margin: 10rpx 10rpx 0 0;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  
}
.vendor_name .Istop {
  background: #f7781f;
  color: #fff;
}
.vendor_bottom_info{
  padding-left:20rpx;
  font-size: 24rpx;
  color: #d5d5d5;
  line-height: 40rpx;
}
.grade_start{
  color: #f7ce46;
}
.vendor_bottom_info .tip{
  color: #ec404c;
}
