@import '../../style/icon-font.wxss';
.box-1 {
  background-color: #3c78d8;
  height: 80rpx;
  padding: 0 30rpx 0 20rpx;
  position: sticky;
  top: 0;
  z-index: 99;
}
.box-1 .box-right {
  background-color: #fff;
  font-size: 26rpx;
  flex: 1;
  border-radius: 50rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 60rpx;
}

.box-1 .box-right .iconfont {
  padding: 0 5rpx 0 0;
  color: #808080;
}
.box-5 {
  height: 80rpx;
  background-color: #fff;
  font-size: 24rpx;
  padding: 0 20rpx;
  margin: 10rpx 0;
}

.box-5 .iconfont {
  padding-right: 10rpx;
  color: #f64349;
}
.category_item{
  width: 20%;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 40rpx;
  padding: 20rpx;
}

.category_item image{
  width: 80rpx;
  height: 80rpx;
}
.tab__item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-size: 24rpx;
  height: 80rpx;
  padding: 10px;
  box-sizing: border-box;
}

.stickyBar {
  position: sticky;
  top: 0;
  z-index: 100;
}

.vendor_hot {
  padding: 20rpx;
  margin-bottom: 10rpx;
  background: #fff;
}

.vendor_hot image {
  width: 140rpx;
  height: 140rpx;
}

.vendor_hot .vendor_name{
  font-size: 30rpx;
}
.vendor_hot .vendor_address{
  font-size: 24rpx;
  color: #888;
}
.vendor_hot .icon-location{
  color: red;
}
.vendor_hot .icon-phone{
  font-size: 60rpx;
  color: #ec404c;
}
.vendor_hot .vendor_top_info{
  flex: 1;
  padding-left: 20rpx;
}
.vendor_name label {
  display: inline-block;
  font-size: 24rpx;
  margin: 10rpx 10rpx 0 0;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  
}
.vendor_name .Istop {
  background: #f7781f;
  color: #fff;
}
.vendor_bottom_info{
  padding-left:20rpx;
  font-size: 24rpx;
  color: #d5d5d5;
  line-height: 40rpx;
}
.grade_start{
  color: #d5d5d5;
}
.vendor_bottom_info .tip{
  color: #ec404c;
}