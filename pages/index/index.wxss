}

.operation_url label {
  color: #008aff;
}

.vendor_hot {
  padding: 20rpx;
  margin-bottom: 10rpx;
  background: #fff;
}

.vendor_hot image {
  width: 140rpx;
  height: 140rpx;
}

.vendor_hot .vendor_name{
  font-size: 30rpx;
}
.vendor_hot .vendor_address{
  font-size: 24rpx;
