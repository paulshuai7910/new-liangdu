.location_auth{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, .3);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}
.location_auth cover-image{
  width: 200rpx;
  height: 200rpx;
}
.location_auth_box{
  width: 500rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, .3);
  display: flex;
  box-sizing: border-box;
  padding:30rpx 30rpx 40rpx 30rpx;
  flex-direction: column;
  align-items: center;
  
}

.location_auth_desc{
  font-size: 32rpx;
  line-height: 50rpx;
