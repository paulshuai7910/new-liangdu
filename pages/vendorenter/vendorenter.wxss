@import '../../style/icon-font.wxss';

.from_content {
  background-color: #fff;
}

.section {
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  line-height: 1.4;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.from_box {
  margin-bottom: 10rpx;
}

.input__combine {
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  line-height: 1.4;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.input__combine::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e5e5e5;
  border-bottom-width: 1px;
}

.input__label {
  min-width: 163rpx;
  height: 46rpx;
  line-height: 46rpx;
  color: #333;
}

.from_content picker{
  font-size:30rpx;
  color:#333;
  display: flex;
  align-items: center;
}

.input__combine--nob {
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  line-height: 1.4;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.add_facility {
  background-color: #1aad19;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  justify-items: center;
  align-items: center;
  padding: 0 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.add_facility .iconfont {
  font-size: 24rpx;
}

.facility_item {
  height: 50rpx;
  line-height: 50rpx;
  border: 1rpx solid #1aad19;
  font-size: 24rpx;
  padding: 0 10rpx;
  border-radius: 8rpx;
  color: #333;
  min-width: 80rpx;
  text-align: center;
  box-sizing: border-box;
  margin-right: 15rpx;
  position: relative;
  margin-bottom: 15rpx;
}

.facility_item .iconfont {
  position: absolute;
  color: #db384c;
  top: -22rpx;
  right: -12rpx;
}

.facility_list {
  padding: 0 20rpx 20rpx 20rpx;
}
.qrcode_box{
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #888;
  font-size: 24rpx;
  display: flex;
  color: #888;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.qrcode_box .iconfont{
  font-size: 60rpx;
}
.qrcode_box label{
  line-height: 40rpx;
}
.textarea_box{
  font-size: 26rpx;
  padding:10rpx 30rpx;
}
.textarea_box textarea{
  height: 150rpx;
  width: 100%;
  border-bottom: 1rpx solid #d5d5d5;
}
.img_list{
  padding: 0 30rpx;
}
