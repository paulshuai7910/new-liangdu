@import '../../style/icon-font.wxss';

.shop__warp {
  background-color: #fff;
}

.shop__banner-warp {
  height: 288rpx;
}

.shop__banner-center {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
  height: 100%;
  color: #fff;
}

.shop__info-warp {
  position: relative;
  padding: 0 20rpx;
  height: 124rpx;
  margin-bottom: 20rpx;
  z-index: 6;
  
}

.shop__info-center {
  position: relative;
  height: 270rpx;
  width: 100%;
  top: -144rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 5rpx 25rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}

.shop__info-logo {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  right: 20rpx;
  top: -60rpx;
  flex-shrink: 0;
  border-radius: 4rpx;
  box-shadow: 0 -5rpx 15rpx rgba(0, 0, 0, 0.3);
}

.shop__info-logo image {
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
}

.shop__info-name {
  width: 80%;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.shop_notice {
  margin-top: 10rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #bbb;
  margin-bottom: 20rpx;
}

.coupon__box {
  margin-top: 20rpx;
}

.coupon__item {
  width: 312rpx;
  height: 120rpx;
  background-color: #fdf7f7;
  border: 1rpx solid #fedfde;
  border-radius: 4rpx;
  flex-shrink: 0;
  margin-right: 10rpx;
}

.coupon__info {
  font-size: 20rpx;
  color: #fb4e44;
  padding: 0 10rpx;
  border-right: 2rpx dashed #fedfde;
  box-sizing: border-box;
  width: 70%;
}

.coupon__price {
  font-size: 36rpx;
  font-weight: bold;
}

.coupon__get {
  font-size: 24rpx;
  color: #fb4e44;
  line-height: 120rpx;
  text-align: center;
  width: 30%;
}

.top_info {
  height: 200rpx;
}

.info_center {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
  height: 100%;
  color: #fff;
}

.top_info .logo {
  width: 140rpx;
  height: 140rpx;
  background-color: #fff;
  border-radius: 4rpx;
  padding: 5rpx;
}

.top_info .logo image {
  width: 100%;
  height: 100%;
}

.info {
  margin-left: 10rpx;
}

.info .name {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.info .notice {
  font-size: 24rpx;
}

.tab__box {
  background-color: #fff;
}

.tab__item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-size: 24rpx;
  height: 100rpx;
  flex-direction: column;
  padding:10px;
  box-sizing: border-box;
}
.tab__text {
  height: 34rpx;
  line-height: 34rpx;
}

.pinfo{
  height: 180rpx;
  padding: 20rpx;
}
.pinfo image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 4rpx;
  margin-right: 20rpx;
  flex-grow: 0;
  flex-shrink: 0;
}
.pname{
  font-size: 32rpx;
  color: #000;
}

.psale_name{
  font-size: 24rpx;
  color: #3c3c3c;
  width: 350rpx;
  padding: 5rpx 0;
}

.psale_num{
  font-size: 20rpx;
  color: #bbb;
}